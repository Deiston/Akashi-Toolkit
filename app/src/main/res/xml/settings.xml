<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/category_general">

        <rikka.materialpreference.DropDownPreference
            android:key="night_mode"
            android:title="@string/night_mode"
            app:myEntries="@array/night_mode"
            app:myEntryValues="@array/night_mode_value"
            android:defaultValue="1"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_twitter">

        <rikka.materialpreference.EditTextPreference
            android:key="twitter_count"
            android:title="@string/twitter_count"
            android:defaultValue="30"
            app:textInputType="number">
        </rikka.materialpreference.EditTextPreference>

        <rikka.materialpreference.DropDownPreference
            android:key="twitter_display_language"
            android:title="@string/twitter_display_language"
            app:myEntries="@array/twitter_display_language"
            app:myEntryValues="@array/twitter_display_language_value"
            android:defaultValue="2"/>

    </PreferenceCategory>

    <!--<PreferenceCategory
        android:title="@string/category_item">

        <rikka.materialpreference.SwitchPreference
            android:key="display_enemy"
            android:title="@string/display_enemy"
            android:defaultValue="false">
        </rikka.materialpreference.SwitchPreference>

    </PreferenceCategory>-->

    <PreferenceCategory
        android:title="@string/category_update">

        <rikka.materialpreference.DropDownPreference
            android:key="update_check_channel"
            android:title="@string/update_check_channel"
            app:myEntries="@array/update_check_channel"
            app:myEntryValues="@array/update_check_channel_value"
            android:defaultValue="0"/>

        <Preference
            android:key="reset_read"
            android:title="@string/reset_read"
            android:summary="@string/reset_read_summary"/>

    </PreferenceCategory>

</PreferenceScreen>