<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/PreferenceTheme.Material</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Transparent" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppTheme.ItemActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorPrimaryItemActivity</item>
        <item name="colorPrimaryDark">@color/colorItemDisplayStatusBar</item>

        <!--<item name="homeAsUpIndicator">@drawable/ic_clear_24dp</item>-->
        <item name="actionOverflowButtonStyle">@style/AppTheme.ActionButton.Overflow.Dark</item>
    </style>

    <style name="AppTheme.ImagesActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorImageDisplayBackground</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/colorItemDisplayStatusBar</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionButton.Overflow.Dark" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="srcCompat">@drawable/ic_more_vert_24dp</item>
    </style>

    <style name="ItemActivity.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/itemDisplayTitle</item>
    </style>

    <style name="ItemActivity.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/itemDisplaySubtitle</item>
    </style>

    <style name="BookmarkSwitch">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="switchStyle">@style/AppTheme.Switch.Bookmark</item>
    </style>

    <style name="AppTheme.Switch.Bookmark" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="track">@drawable/switch_track_bookmark</item>
        <item name="android:thumb">@drawable/switch_thumb_bookmark</item>
    </style>

</resources>
