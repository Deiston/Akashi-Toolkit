<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:weightSum="5.2">

    <TextView
        android:id="@android:id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_activity_margin"
        android:layout_marginStart="@dimen/item_activity_margin"
        android:layout_weight="1.2"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/card_font_large"
        tools:text="必要资源"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/res_fuel"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_number_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="@dimen/card_font_large"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/res_ammo"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="@dimen/card_font_large"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/res_steel"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_number_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="@dimen/card_font_large"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/res_aluminum"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_number_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="@dimen/card_font_large"
            tools:text="0"/>
    </LinearLayout>

</LinearLayout>