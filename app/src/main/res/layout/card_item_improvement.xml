<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    card_view:cardBackgroundColor="@color/cardBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/image_quest_avatar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.16"
            android:contentDescription="@null"
            android:padding="12dp"
            android:visibility="gone"
            tools:visibility="gone"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.84"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp">
            <!--android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"-->

            <TextView
                android:id="@+id/text_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12.7cm連装砲"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="@dimen/card_font_large" />

            <TextView
                android:id="@+id/text_card_item_improve_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="小口径主砲"
                android:textSize="@dimen/card_font_medium" />

            <TextView
                android:id="@+id/text_card_item_improve_ship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="二号舰娘: 无"
                android:textSize="@dimen/card_font_medium" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>