<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/card_quest"
    android:weightSum="1.5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/res_fuel"/>

        <TextView
            android:id="@+id/text_quest_reward_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingStart="2dp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/res_ammo"/>

        <TextView
            android:id="@+id/text_quest_reward_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingStart="2dp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/res_steel"/>

        <TextView
            android:id="@+id/text_quest_reward_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingStart="2dp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/res_aluminum"/>

        <TextView
            android:id="@+id/text_quest_reward_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingStart="2dp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            tools:text="0"/>
    </LinearLayout>

</LinearLayout>