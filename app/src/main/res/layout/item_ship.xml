<rikka.akashitoolkit.ui.widget.ForegroundRelativeLayout
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/cardBackground"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/item_padding"
    android:paddingRight="@dimen/item_padding"
    android:paddingTop="8dp"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp">

        <rikka.akashitoolkit.ui.widget.BezelImageView
            android:id="@android:id/icon"
            android:layout_width="128dp"
            android:layout_height="32dp"
            tools:src="@mipmap/ic_launcher"
            app:maskDrawable="@drawable/banner_mask"
            android:layout_gravity="end"
            android:contentDescription="@null"/>

    </FrameLayout>

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp"
        tools:text="睦月"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/content_container"
        android:layout_toEndOf="@+id/content_container"/>

    <TextView
        android:id="@android:id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="睦月型一号舰"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

