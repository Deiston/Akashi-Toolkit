<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="22dp"
    android:orientation="horizontal"
    android:weightSum="1.3"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/modernization_attr_fire"/>

        <TextView
            android:id="@+id/text_number_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/card_font_large"
            android:gravity="center_vertical"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/modernization_attr_torpedo"/>

        <TextView
            android:id="@+id/text_number_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/card_font_large"
            android:gravity="center_vertical"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/modernization_attr_aa"/>

        <TextView
            android:id="@+id/text_number_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/card_font_large"
            android:gravity="center_vertical"
            tools:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/modernization_attr_armor"/>

        <TextView
            android:id="@+id/text_number_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/card_font_large"
            android:gravity="center_vertical"
            tools:text="0"/>
    </LinearLayout>

</LinearLayout>