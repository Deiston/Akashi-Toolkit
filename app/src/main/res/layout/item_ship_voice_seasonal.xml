<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:background="?attr/selectableItemBackground"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@android:id/title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="@dimen/item_activity_margin"
        android:layout_marginStart="@dimen/item_activity_margin"
        android:layout_marginRight="-8dp"
        android:layout_marginEnd="-8dp"
        tools:text="江風"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1dp"

            tools:text="白露型駆逐艦九番艦、改白露型の江風だよ。よろしくな！あ、読み方、間違えンなよ。"/>

        <TextView
            android:id="@+id/text_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1dp"
            android:layout_marginTop="4dp"
            tools:text="我是白露级驱逐舰九号舰，改白露型的江风。请多关照啦。啊，名字的读法别弄错了哦。"/>

    </LinearLayout>

</LinearLayout>
