<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    style="@style/HomeCard">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/card_twitter_padding_vertical"
        android:paddingLeft="@dimen/card_twitter_padding_horizontal"
        android:paddingRight="@dimen/card_twitter_padding_horizontal"
        android:paddingTop="@dimen/card_twitter_padding_vertical">

        <include layout="@layout/card_twitter_inside"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/more_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="12dp"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_more_vert_24dp"
        android:contentDescription="@null"/>

</android.support.v7.widget.CardView>
