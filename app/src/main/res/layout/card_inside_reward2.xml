<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/card_expedition">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:showIn="@layout/card_expedition"
        android:weightSum="1.0"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/res_fuel"
                android:layout_gravity="top"/>

            <TextView
                android:id="@+id/text_number_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="@dimen/card_font_medium"
                android:gravity="center_vertical"
                tools:text="0\n0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/res_ammo"/>

            <TextView
                android:id="@+id/text_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="@dimen/card_font_medium"
                android:gravity="center_vertical"
                tools:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/res_steel"/>

            <TextView
                android:id="@+id/text_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="@dimen/card_font_medium"
                android:gravity="center_vertical"
                tools:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/res_aluminum"/>

            <TextView
                android:id="@+id/text_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="@dimen/card_font_medium"
                android:gravity="center_vertical"
                tools:text="0"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_quest_reward_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/card_font_medium"
        tools:text="驱逐舰白雪"/>
</LinearLayout>