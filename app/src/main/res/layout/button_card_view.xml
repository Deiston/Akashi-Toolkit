<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="@dimen/card_width"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="@dimen/card_home_margin_vertical"
    android:layout_marginBottom="@dimen/card_home_margin_vertical"
    android:layout_marginLeft="@dimen/card_home_margin_horizontal"
    android:layout_marginRight="@dimen/card_home_margin_horizontal"
    android:layout_gravity="center_horizontal"
    card_view:cardBackgroundColor="@color/cardBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/button_card_view_body"/>

        <include layout="@layout/button_card_view_buttons"/>

    </LinearLayout>

</android.support.v7.widget.CardView>