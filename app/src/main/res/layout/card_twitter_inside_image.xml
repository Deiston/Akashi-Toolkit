<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="1000px"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:paddingLeft="32px"
    android:paddingRight="32px"
    android:paddingTop="24px"
    android:paddingBottom="24px"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <rikka.akashitoolkit.ui.widget.BezelImageView
            android:id="@+id/image_twitter_avatar"
            android:layout_width="144px"
            android:layout_height="144px"
            android:layout_marginLeft="12px"
            android:layout_marginRight="12px"
            android:contentDescription="@null"
            android:scaleType="fitStart"
            app:maskDrawable="@drawable/circle_mask"
            tools:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="24px"
            android:paddingRight="24px">

            <TextView
                android:id="@+id/text_twitter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="42px"
                tools:text="「艦これ」開発/運営"/>

            <TextView
                android:id="@+id/text_twitter_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:textSize="36px"
                tools:text="2016-03-06 09:37:53"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_twitter_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:background="@null"
            android:paddingLeft="12px"
            android:paddingRight="12px"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="42px"
            tools:text="現在「艦これ」運営鎮守府では、今週【3/11(金)】実施予定の「艦これ」稼働全サーバ群共通メンテナンスの準備を進めています。同メンテナンスに伴うアップデートでは、多彩な艦娘【ホワイトデー提督のお返しボイス】と、中部海域方面に【新作戦海域】を実装予定です！お楽しみに！"/>

        <TextView
            android:id="@+id/text_twitter_content_translated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:background="@null"
            android:paddingLeft="12px"
            android:paddingRight="12px"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="42px"
            tools:text="现在舰队收藏运营镇守府正在对本周【3/11星期五】将要进行的舰队收藏全服务器共通维护/更新进行着准备。本次维护/更新中，除去各位舰娘的【白色情人节与提督的回礼】限定语音外，中部海域方面将开辟【新作战海域】。尽请期待！"/>

        <ImageView
            android:id="@+id/image_twitter_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:layout_marginStart="12px"
            android:layout_marginTop="24px"
            android:contentDescription="@null"
            android:maxWidth="720px"
            android:minHeight="1000px"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:layout_width="720px"
            tools:src="@mipmap/ic_launcher"
            tools:visibility="visible"/>

    </LinearLayout>

    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:layout_marginTop="36px"
        android:paddingLeft="12px"
        android:paddingRight="12px"
        android:text="@string/send_via_akashi_toolkit"/>

</LinearLayout>