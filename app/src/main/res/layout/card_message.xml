<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_width"
    tools:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="@dimen/card_twitter_margin_vertical"
    android:layout_marginBottom="@dimen/card_twitter_margin_vertical"
    android:layout_marginLeft="@dimen/card_twitter_margin_horizontal"
    android:layout_marginRight="@dimen/card_twitter_margin_horizontal"
    android:layout_gravity="center_horizontal"
    card_view:cardBackgroundColor="@color/cardBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="6dp"
            tools:text="Title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textSize="20sp"/>

        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            tools:text="summary"
            android:textSize="@dimen/card_font_medium"/>

        <TextView
            android:id="@android:id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            tools:text="body\nbody\nbody"
            android:lineSpacingMultiplier="1.1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textSize="@dimen/card_font_medium"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="2dp">

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@android:id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0px"
                android:textColor="?attr/colorAccent"
                tools:text="action"
                style="?attr/borderlessButtonStyle">
            </Button>

            <Button
                android:id="@android:id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0px"
                tools:text="action"
                android:textColor="?attr/colorAccent"
                style="?attr/borderlessButtonStyle">
            </Button>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>